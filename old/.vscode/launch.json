    "version": "0.2.0",
    "configurations": [

        {
            "name": "client",
            "request": "launch",
            "type": "dart",
            "program": "${workspaceFolder}/lib/main.dart"
        },
        {
            "name": "web",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "deviceId": "chrome"
        },
        {
            "name": "client (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "client (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
